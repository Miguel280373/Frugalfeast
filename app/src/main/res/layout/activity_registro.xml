<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Registro"
        android:background="@color/Fondo">


        <TextView
            android:id="@+id/registroLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registro"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="italic|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.036" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="174dp"
            android:layout_height="178dp"
            android:contentDescription="@string/logo_frugal_feast"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registroLabel"
            app:layout_constraintVertical_bias="0.01"
            app:srcCompat="@drawable/logo"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/nombreLabel"
            android:layout_width="257dp"
            android:layout_height="35dp"
            android:text="@string/nombre_completo"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintVertical_bias="0.033"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/nombreCampo"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:autofillHints=""
            android:background="@drawable/roundededittext"
            android:backgroundTint="@color/CuadrosTexto"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombreLabel"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="LabelFor,RtlSymmetry,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/apodoLabel"
            android:layout_width="257dp"
            android:layout_height="35dp"
            android:autofillHints=""
            android:text="@string/apodo_opcional"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombreCampo"
            app:layout_constraintVertical_bias="0.032"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/apodoCampo"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:autofillHints=""
            android:background="@drawable/roundededittext"
            android:backgroundTint="@color/CuadrosTexto"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apodoLabel"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="LabelFor,RtlSymmetry,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/correoLabel"
            android:layout_width="257dp"
            android:layout_height="35dp"
            android:autofillHints=""
            android:text="@string/correo_electronico2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apodoCampo"
            app:layout_constraintVertical_bias="0.032"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/correoCampo"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:autofillHints=""
            android:background="@drawable/roundededittext"
            android:backgroundTint="@color/CuadrosTexto"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correoLabel"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,LabelFor,RtlSymmetry,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/contrase単aLabel"
            android:layout_width="257dp"
            android:layout_height="35dp"
            android:autofillHints=""
            android:text="@string/contrase_a2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correoCampo"
            app:layout_constraintVertical_bias="0.032"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/contrase単aCampo"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:autofillHints=""
            android:background="@drawable/roundededittext"
            android:backgroundTint="@color/CuadrosTexto"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contrase単aLabel"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="LabelFor,RtlSymmetry,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/confirmarContraLabel"
            android:layout_width="257dp"
            android:layout_height="35dp"
            android:autofillHints=""
            android:text="@string/confirmar_contrase_a"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contrase単aCampo"
            app:layout_constraintVertical_bias="0.032"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/confirmarContraCampo"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:background="@drawable/roundededittext"
            android:ems="10"
            android:backgroundTint="@color/CuadrosTexto"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmarContraLabel"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="Autofill,LabelFor,RtlSymmetry,SpeakableTextPresentCheck" />

        <CheckBox
            android:id="@+id/checkBoxTerminos"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="center"
            android:text="@string/estoy_de_acuerdo_con_los_terminos_y_condiciones"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmarContraCampo"
            app:layout_constraintVertical_bias="0.20" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registrarse"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corner_naranja"
            android:text="@string/registrarse"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxTerminos"
            app:layout_constraintVertical_bias="0.189"
            tools:ignore="TextContrastCheck" />


        <TextView
            android:id="@+id/textYaTienesCuenta"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:layout_marginBottom="50dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/ya_tienes_cuenta_iniciar_sesion"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registrarse"
            app:layout_goneMarginBottom="20dp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:contentDescription="@string/atras"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>