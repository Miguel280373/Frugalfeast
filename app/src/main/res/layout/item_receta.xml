<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivRecipeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/rounded_image"
            android:layout_marginEnd="8dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fricas_de_pollo"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_vertical"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:minHeight="85dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvTiempoReceta"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:drawablePadding="4dp"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center"
                    android:paddingStart="4dp"
                    android:singleLine="false"
                    android:lines="2"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:text="@string/_1_hora"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    app:drawableTint="@color/black"
                    app:drawableTopCompat="@drawable/baseline_access_time_24" />

                <TextView
                    android:id="@+id/tvPorcionesReceta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/_4_porciones"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:drawableTopCompat="@drawable/baseline_person_24" />


                <TextView
                    android:id="@+id/tvDificultadReceta"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="4dp"
                    app:drawableTint="@color/black"
                    android:text="@string/f_cil"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:drawableTopCompat="@drawable/baseline_query_stats_24" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
